<DOCTYPE html>
<html lang="en-US">
	<head>
		<meta charset="UTF-8">
		<title>Timetrak</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	</head>
	<body>
		<%= render 'layouts/header' %>
		<div class="maincontainer">
			<%= render 'layouts/error_msgs' %>
			<%= flash[:error] %>
			<div class="subcontainer">
				Create An Account:
        <table id="account_info">
					<%= form_for @account do |a| %>
	          <tr><th>Username:</th><td><%= a.text_field :username %></td></tr>
						<tr><th>Password:</th><td><%= a.password_field :password %></td></tr>
						<tr><th>Confirm Password:</th><td><%= a.password_field :password_confirmation %>
						<tr><th>Email:</th><td><%= a.text_field :email %></td></tr>
	          <tr><td><%= a.submit "Create Account"%></td></tr>
					<% end %>
				</table>
			</div>
		</div>
	</body>
  <%= yield -%>
</html>

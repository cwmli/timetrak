<body id="landing">
		<%= render 'layouts/header' %>
		<%= render 'layouts/flash_msgs' %>
			<div class="subcontainer">
					<%= content_tag :div, class: 'float-container' do %>
	        <%= form_for(:session, url: login_path) do |f| %>
	          <%= f.text_field :username, placeholder: 'Username' %><br>
	          <%= f.password_field :password, placeholder: 'Password' %><br>

						<%= f.label :remember_me do %>
							<%= f.check_box :remember_me %>
							<span>Remember me</span>
						<% end %>

	          <%= f.submit "Login", class: 'submit-button' %>
	        <% end %>
	        Need an account? <%= link_to "Register now!", new_account_path %>
					<% end %>
			</div>
</body>
<%= yield -%>
